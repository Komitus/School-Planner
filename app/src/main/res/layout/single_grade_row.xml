<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/gradeValue"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Val"
        android:textAlignment="gravity"
        android:textColor="@android:color/primary_text_light"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/gradeCategory"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="gradeCategory"
        android:textAlignment="gravity"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/gradeValue"
        app:layout_constraintStart_toEndOf="@+id/gradeValue"
        app:layout_constraintTop_toTopOf="@+id/gradeValue" />

    <TextView
        android:id="@+id/gradeDate"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="gradeDate"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/gradeCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gradeCategory"
        app:layout_constraintTop_toTopOf="@+id/gradeCategory" />
</androidx.constraintlayout.widget.ConstraintLayout>